<Window x:Class="Exo1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exo1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="362" Margin="28,32,0,0" VerticalAlignment="Top" Width="739">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top" RenderTransformOrigin="0.465,0.617" Height="282" Margin="248,0,218,0">
                <Label>Username</Label>
                <TextBox></TextBox>
                <Label>Menu n 1</Label>
                <Label>Menu n 2</Label>
                <Label>Menu n 3</Label>
                <Button Click="Button_Click" Background="#FFF34949">Show Wrap Panel</Button>
                <Button Click="Button_Click_1" Background="#FF44D3D3">Show Dock Panel</Button>
                <Button Style="{StaticResource buttonHandler}">Show GridSpliter</Button>
            </StackPanel>
        </Grid>

    </Grid>
    <Window.Resources>
        <Style x:Key="styles">
            <Setter Property="Button.Background" Value="Coral"/>
        </Style>
        
    </Window.Resources>
    
</Window>

