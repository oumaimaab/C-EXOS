<Window x:Class="Exo1.DockPanelWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exo1"
        mc:Ignorable="d"
        Title="DockPanelWin" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Background="GreenYellow">
            <TextBlock TextAlignment="Center" Foreground="Red" FontSize="22">Bottem Dock</TextBlock>
        </StackPanel>
        <StackPanel DockPanel.Dock="Left" Background="Azure" MinWidth="200">
            <TextBlock TextAlignment="Center" Foreground="DarkGreen" FontSize="22px">Left Dock</TextBlock>
        </StackPanel>
        <StackPanel DockPanel.Dock="Top" Background="Yellow" Height="30">
            <TextBlock TextAlignment="Center" Foreground="BlueViolet" FontSize="22px" Margin="0,0,-0.667,0"><Run Text="Top Dock"/></TextBlock>
        </StackPanel>
        
    </DockPanel>
</Window>
