<Window x:Class="Exo1.Spliter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exo1"
        mc:Ignorable="d"
        Title="Spliter" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock TextAlignment="Center" FontSize="30" Grid.Column="0">Left Side</TextBlock>
        <TextBlock TextAlignment="Center" FontSize="30" Grid.Column="1">Right Side</TextBlock>
        <GridSplitter Grid.Column="0" BorderBrush="Black" BorderThickness="6">

        </GridSplitter>
    </Grid>
    
</Window>
