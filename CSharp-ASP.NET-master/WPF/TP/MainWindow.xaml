        xmlns:local="clr-namespace:TP"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        mc:Ignorable="d"
        Title="MainWindow" Height="960" Width="1600" Loaded="Load">
    <Window.Resources>
